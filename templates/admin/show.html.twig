    <style>
        body {
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fc;
        }

        #layoutSidenav {
            display: grid;
            grid-template-columns: auto 1fr;
            grid-template-areas: "sidenav content";
            height: 100%;
        }

        #layoutSidenav_nav {
            grid-area: sidenav;
            top: 0;
            left: 0;
            bottom: 0;
            background-color: #003788;
        }

        #layoutSidenav_content {
            grid-area: content;
            overflow-y: auto; /* Permet de faire défiler le contenu si nécessaire */
            padding: 20px;
            margin-left: 250px; /* Largeur de la barre latérale */
        }

        /* Ajoutez le reste de votre style personnalisé ici */
        .unibank-text {
            font-size: 1em;
            font-family: Arial;
            font-weight: bold;
            color: #ffffff;
            margin-left: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
            vertical-align: -20px;
        }

        /* Sidebar and navbar background color */
        .sb-topnav, .sb-sidenav {
            background-color: #003788;
        }

        /* Sidebar menu items color */
        .sb-sidenav-menu a.nav-link, 
        .sb-topnav .navbar-nav .nav-link {
            color: #fff; /* Blanc */
            font-family: Arial, sans-serif; /* Police Arial */
            font-weight: 600; /* Plus gras */
        }

        /* Couleur de l'icône */
        .sb-sidenav-menu a.nav-link[href="#!"] .sb-nav-link-icon i {
            color: #fff; /* Blanc */
        }

        /* Style de texte élégant */
        .sb-nav-link .sb-nav-link-icon {
            font-size: 18px; /* Taille de police */
            margin-right: 10px; /* Marge à droite pour l'espacement */
        }

        /* Sidebar menu items hover background color */
        .sb-sidenav-menu a.nav-link:hover, 
        .sb-topnav .navbar-nav .nav-link:hover {
            background-color: #0056b3;
            color: #fff; /* Blanc */
        }

        /* Navbar toggle button color */
        .navbar-dark .navbar-toggler-icon {
            background-color: #fff;
        }

        /* Button primary color */
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        /* Button primary hover color */
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        /* Button success color */
        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        /* Button success hover color */
        .btn-success:hover {
            background-color: #218838;
            border-color: #218838;
        }

        /* Button danger color */
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        /* Button danger hover color */
        .btn-danger:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

        /* Ligne de séparation entre sidenav et topnav */
        .divider-line {
            border-bottom: 1px solid #000; /* Couleur de la bordure noire */
            margin-bottom: 0.5px;
        }
        
    </style>
    
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
