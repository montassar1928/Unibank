        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const btnBannedList = document.querySelectorAll('.btn-banned');
                const btnUnbannedList = document.querySelectorAll('.btn-unbanned');
        
                btnBannedList.forEach(function(btnBanned) {
                    btnBanned.addEventListener('click', function() {
                        const form = btnBanned.closest('form');
                        const userId = form.querySelector('input[name="id"]').value;
                        localStorage.setItem(`user-${userId}-status`, 'banned');
                        form.action = `/bannedbanque/${userId}`;
                        form.submit();
                    });
                });
        
                btnUnbannedList.forEach(function(btnUnbanned) {
                    btnUnbanned.addEventListener('click', function() {
                        const form = btnUnbanned.closest('form');
                        const userId = form.querySelector('input[name="id"]').value;
                        localStorage.setItem(`user-${userId}-status`, 'unbanned');
                        form.action = `/unbannedbanque/${userId}`;
                        form.submit();
                    });
                });
        
                // Check localStorage on page load and adjust button visibility
                document.querySelectorAll('.actions-cell').forEach(function(cell) {
                    const userId = cell.querySelector('input[name="id"]').value;
                    const status = localStorage.getItem(`user-${userId}-status`);
                    if (status === 'banned') {
                        cell.querySelector('.btn-banned').style.display = 'none';
                        cell.querySelector('.btn-unbanned').style.display = 'inline-block';
                    } else if (status === 'unbanned') {
                        cell.querySelector('.btn-banned').style.display = 'inline-block';
                        cell.querySelector('.btn-unbanned').style.display = 'none';
                    }
                });
            });
