{% extends 'base.html.twig' %}

{% block title %}New International Operation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Custom styles */
        .form-group {
            margin-bottom: 20px;
        }
        .form-control, select.form-control {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            width: 100%;
        }
        .form-control:focus {
            border-color: #03045E;
            box-shadow: 0 0 0 0.2rem rgba(3, 4, 94, 0.25);
        }
        .btn-primary {
            background-color: #03045E;
            border-color: #03045E;
            width: 100%;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            transition: background-color 0.3s, border-color 0.3s;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .form-error-message {
            color: red;
        }
        /* Card styles */
        .card {
            margin: 20px auto;
            max-width: 400px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
        .card-header {
            background-color: #03045E;
            color: #fff;
            border-bottom: none;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 15px;
            text-align: center;
        }
        .card-body {
            padding: 20px;
        }
    </style>
{% endblock %}

{% block body %}
        
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Operation de virement</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        <label for="description">Description <i class="fas fa-info-circle"></i></label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        <span class="form-error-message">{{ form_errors(form.description) }}</span>
                    </div>
                    <div class="form-group">
                        <label for="montantopt">Amount <i class="fas fa-money-bill-wave"></i></label>
                        {{ form_widget(form.montantopt, {'attr': {'class': 'form-control'}}) }}
                        <span class="form-error-message">{{ form_errors(form.montantopt) }}</span>
                    </div>
                    <div class="form-group">
                        <label for="montantopt">send  <i class="fas fa-money-bill-wave"></i></label>
                        {{ form_widget(form.send, {'attr': {'class': 'form-control'}}) }}
                        <span class="form-error-message">{{ form_errors(form.send) }}</span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
