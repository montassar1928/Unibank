            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4"></h1>
                        {% block body %}
                        <div class="row justify-content-end">
                            <div class="col-md-6 text-end">
                                <form action="{{ path('app_users_index') }}" method="GET" class="mb-4">
                                    <div class="input-group justify-content-end search-container" style="width: 350px; margin-right: 20px;">
                                        <input type="text" class="form-control form-control-sm me-auto" placeholder="Rechercher" name="query" value="{{ app.request.query.get('query') }}">
                                        <select class="form-select form-select-sm me-0" name="filter">
                                            <option value="nom">Nom</option>
                                            <option value="prenom">Prénom</option>
                                            <option value="cin">CIN</option>
                                        </select>
                                        <button type="submit" class="btn btn-primary btn-sm ms-0">
                                            <i class="fas fa-search"></i> <!-- Ajoutez votre classe d'icône ici -->
                                        </button>                                
                                    </div>
                                    
                                </form>
                                
                                
                            </div>
                        </div>
                        
                    
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                DataTable 
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="datatablesSimple" class="table">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>Email</th>
                                                <th>Date_creation</th>
                                                <th>Adresse</th>
                                                <th>Raison_Sociale</th>
                                                <th>Telephone</th>
                                                <th>DateDeNaissance</th>
                                                <th>Statut</th>
                                                <th>Cin</th>
                                                <th>Role</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for user in pagination.items %}
                                                <tr>
                                                    <td>{{ user.id }}</td>
                                                    <td>{{ user.nom }}</td>
                                                    <td>{{ user.prenom }}</td>
                                                    <td>{{ user.email }}</td>
                                                    <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d') : '' }}</td>
                                                    <td>{{ user.adresse }}</td>
                                                    <td>{{ user.RaisonSociale }}</td>
                                                    <td>{{ user.telephone }}</td>
                                                    <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('Y-m-d') : '' }}</td>
                                                    <td>{{ user.statut }}</td>
                                                    <td>{{ user.cin }}</td>
                                                    <td>{{ user.Role }}</td>
                    
                                                    <td class="d-flex justify-content-end">
                                                        <!-- Utilisation de flexbox pour aligner les boutons à droite -->
                                                        <form action="{{ path('app_users_accept', {'id': user.id}) }}" method="post">
                                                            <input type="hidden" name="id" value="{{ user.id }}">
                                                            <button type="submit" class="btn btn-success btn-sm" style="background-color: #003788;">Accepter</button>
                                                        </form>
                                                        <form action="{{ path('delete', {'id': user.id}) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <button type="submit" class="btn btn-danger btn-sm ms-2" style="background-color: #003788;">Supprimer</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="12">no records found</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    
                        {% if pagination.getTotalItemCount() > 0 %}
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-end">
                                <li class="page-item{% if pagination.currentPageNumber == 1 %} disabled{% endif %}">
                                    <a class="page-link" href="{{ path('app_users_index', {'page': pagination.currentPageNumber - 1}) }}">Previous</a>
                                </li>
                                {% for page in 1..pagination.pageCount %}
                                    <li class="page-item{% if page == pagination.currentPageNumber %} active{% endif %}">
                                        <a class="page-link" href="{{ path('app_users_index', {'page': page}) }}">{{ page }}</a>
                                    </li>
                                {% endfor %}
                                <li class="page-item{% if pagination.currentPageNumber == pagination.pageCount %} disabled{% endif %}">
                                    <a class="page-link" href="{{ path('app_users_index', {'page': pagination.currentPageNumber + 1}) }}">Next</a>
                                </li>
                            </ul>
                        </nav>
                    {% endif %}
                    
                    {% endblock %}
                    
                    
                    
                       
