                        <!DOCTYPE html>
                        <html>
                        <head>
                            <title>Comparaison des utilisateurs actifs et inactifs</title>
                            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                            <style>
                                canvas {
                                    max-width: 400px;
                                    max-height: 300px;
                                    margin: 0 auto;
                                    display: block;
                                }
                            </style>
                        </head>
                        <body>
                            <canvas id="userComparisonChart"></canvas>
                            <script>
                                var ctx = document.getElementById('userComparisonChart').getContext('2d');
                                var userComparisonChart = new Chart(ctx, {
                                    type: 'bar',
                                    data: {
                                        labels: ['Actif', 'Inactif'],
                                        datasets: [{
                                            label: 'Nombre de clients',
                                            data: [{{ active_users }}, {{ inactive_users }}],
                                            backgroundColor: [
                                                'rgba(54, 162, 235, 0.6)', // Bleu
                                                'rgba(255, 99, 132, 0.6)' // Rouge
                                            ],
                                            borderColor: [
                                                'rgba(54, 162, 235, 1)',
                                                'rgba(255, 99, 132, 1)'
                                            ],
                                            borderWidth: 1
                                        }]
                                    },
                                    options: {
                                        legend: { display: false },
                                        scales: {
                                            yAxes: [{
                                                type: 'logarithmic', // Utilisation d'une échelle logarithmique pour l'axe des y
                                                ticks: {
                                                    min: 1,
                                                    callback: function(value, index, values) {
                                                        return Number(value.toString()); // Convertir les valeurs à l'échelle logarithmique en nombres lisibles
                                                    }
                                                }
                                            }],
                                            xAxes: [{
                                                ticks: {
                                                    autoSkip: false // Ne pas sauter automatiquement les étiquettes sur l'axe des x
                                                }
                                            }]
                                        }
                                    }
                                });
                            </script>
                            
