                            <script>
                                // Graphique pour les crédits bancaires
                                var creditStatisticsCtx = document.getElementById('creditStatisticsChart').getContext('2d');
                                var creditStatisticsChart = new Chart(creditStatisticsCtx, {
                                    type: 'doughnut',
                                    data: {
                                        labels: ['Crédits accordés', 'Crédits remboursés'],
                                        datasets: [{
                                            data: [10000000, 7500000],
                                            backgroundColor: ['rgba(54, 162, 235, 0.6)', 'rgba(255, 99, 132, 0.6)'],
                                            borderColor: ['rgba(54, 162, 235, 1)', 'rgba(255, 99, 132, 1)'],
                                            borderWidth: 1
                                        }]
                                    },
                                    options: {
                                        responsive: true,
                                        maintainAspectRatio: false
                                    }
                                });
                    
                                // Graphique pour le nombre de comptes
